<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <property name="LOG_HOME" value="${LOG_HOME:-${user.home}/logs/shortUrl}}"/>

    <appender name="SYSOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} |-%-5level [%thread] %c [%logger] -| %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="FILELOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/short-url-service.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/short-url-service.log.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <MaxHistory>30</MaxHistory>
            <totalSizeCap>7GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <Pattern>%d [%t] %-5p [%c] - %m%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步输出 -->
    <appender name="ASYNC-INFO" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>256</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="FILELOG"/>
    </appender>

    <!--过滤掉spring和mybatis的一些无用的DEBUG信息-->
    <logger name="cn.willlu.shorturl" level="INFO" additivity="true">
        <appender-ref ref="ASYNC-INFO"/>
    </logger>
    <root level="WARN">
        <appender-ref ref="SYSOUT"/>
    </root>

</configuration>

